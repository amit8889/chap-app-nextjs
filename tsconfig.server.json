{
    "extends":"./tsconfig.json",
    "compilerOptions": {
        "typeRoots": ["node_modules/@types", "types"],
      "module": "ESNext",
      "target": "ESNext",                  
      "outDir": "./dist",               
      "rootDir": ".",                      
      "strict": true,                      
      "moduleResolution": "node",          
      "noEmit":false,
      "isolatedModules":false    ,
      "allowUnreachableCode": true,
      "noUnusedLocals": false,
      "noUnusedParameters": false     
    },
    
      "include": ["./app", "./server.ts"]
    ,
    "exclude": [
      "node_modules"     
    ]
  }
  